    main.container
      .row.main-contact
        .main-contact__logo
          img(src='images/main_logo.webp' alt='')
          .main-contact__icons
            a(href='')
              img(src='images/be-logo.webp' alt='')
            a(href='')
              img(src='images/fb-logo.webp' alt='')
            a(href='')
              img(src='images/inst-logo.webp' alt='')
        .contact-form
          h2.contact-form__title Contact-us
          form.myForm
            .contact-form__label
              label(for='name')
                | Name
                input.contact_input(id='name' type='text'    placeholder='Enter your name')
            .contact-form__label
              label(for='email')
                | Email Address
                input.contact_input(id='email' type='text' placeholder='Enter your email address')
            .contact-form__label
              label(for='message')
                | Message
                textarea.contact_input(name='message' id='message'  placeholder='Enter your message here')

            .contact-form__submit

              p
                | We will get back to you within
                | one business day
              button.buttonContact(type='submit') Submit
          
          ul.contact_info
            li.contact_info__li
